{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://robotlab.local/schemas/action_plan.schema.json",
  "title": "RobotLab ActionPlan",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "plan_id", "robot_id", "goal", "steps", "success_criteria"],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+(\\.[0-9]+)?$"
    },
    "plan_id": { "type": "string", "minLength": 8 },
    "robot_id": { "type": "string" },

    "goal": {
      "type": "object",
      "additionalProperties": false,
      "required": ["text"],
      "properties": {
        "text": { "type": "string", "maxLength": 400 },
        "context": { "type": "string", "maxLength": 800 }
      }
    },

    "assumptions": {
      "type": "array",
      "items": { "type": "string", "maxLength": 200 },
      "default": []
    },

    "risks": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["risk", "severity"],
        "properties": {
          "risk": { "type": "string", "maxLength": 200 },
          "severity": { "type": "string", "enum": ["low", "medium", "high"] },
          "mitigation": { "type": "string", "maxLength": 300 }
        }
      },
      "default": []
    },

    "rationale_summary": {
      "type": "string",
      "description": "Short, non-sensitive justification. Not chain-of-thought.",
      "maxLength": 800,
      "default": ""
    },

    "steps": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "skill_call.schema.json" }
    },

    "fallback_steps": {
      "type": "array",
      "items": { "$ref": "skill_call.schema.json" },
      "default": []
    },

    "success_criteria": {
      "type": "array",
      "description": "Concrete, checkable criteria in plain language.",
      "minItems": 1,
      "items": { "type": "string", "maxLength": 200 }
    },

    "request_more_info": {
      "type": "object",
      "description": "If planning is ambiguous, ask for one clarifying input instead of guessing.",
      "additionalProperties": false,
      "properties": {
        "needed": { "type": "boolean", "default": false },
        "question": { "type": "string", "maxLength": 200 }
      },
      "default": { "needed": false, "question": "" }
    }
  }
}
