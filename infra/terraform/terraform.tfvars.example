# Copy to terraform.tfvars and fill in values
# terraform.tfvars is gitignored to protect secrets

region        = "us-west-2"
key_name      = "robotlab"
isaac_sim_ami = "ami-0a58578db493e70fb"

# Get your IP: curl -s https://api.ipify.org
my_ip_cidr = "YOUR_IP/32"

# Instance type options:
#   g6e.2xlarge  - L40s GPU, best for streaming ($1.50/hr on-demand, ~$0.50 spot)
#   g5.xlarge    - A10G GPU, training + streaming ($1.00/hr on-demand, ~$0.35 spot)
#   g4dn.xlarge  - T4 GPU, budget option ($0.50/hr on-demand, ~$0.15 spot)
instance_type = "g5.xlarge"

# Spot instances: ~70% cheaper, but can be interrupted with 2 min warning
# Good for dev/training, not for production demos
use_spot = true

# Optional: cap spot price (empty = on-demand price as max)
# spot_max_price = "0.50"
